<header
  class="masthead bg-primary text-white text-center"
  style="
    background-image: url('<%=challenge.cover.original%>');
    background-size: cover;
  "
>
  <div class="container d-flex align-items-center flex-column">
    <!-- Masthead Heading-->
    <div
      style="
        background-color: rgba(0, 0, 0, 0.24);
        padding: 2rem 3rem;
        border-radius: 40px;
      "
    >
      <h1 class="masthead-heading text-uppercase my-2">
        <%= challenge.challenge_title %>
      </h1>

      <!-- Icon Divider-->
      <div class="divider-custom divider-light">
        <div class="divider-custom-line"></div>
        <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
        <div class="divider-custom-line"></div>
      </div>

      <div class="mt-2">
        <a
          class="btn btn-xl btn-outline-light"
          href="/cl/show/<%=challenge.id%>"
        >
          بازگشت به صفحه پست ها
          <i class="fas fa-angle-double-left"></i>
        </a>
      </div>
    </div>

      <!-- Masthead Subheading-->
      <p class="masthead-subheading font-weight-light mb-0">
        <%=post.body%>
      </p>
  </div>
</header>
<div class="row justify-content-center">
  <%for(let file_path of post.files.image){%><img
    class ="post-image"
    src="<%=file_path%>"
    alt="err"
  /><%}%>

  <%for(let file_path of post.files.audio){%><audio class ="post-image" controls>
    <source src="<%=file_path%>">
    <p>Your browser doesn't support HTML5 audio. Here is a <a href="<%=file_path%>">link to the audio</a> instead.</p>
  </audio><%}%>

  <%for(let file_path of post.files.video){%><video class ="post-image" src="<%=file_path%>" controls>
    <p>Your browser doesn't support HTML5 video. Here is a <a href="<%=file_path%>">link to the video</a> instead.</p>
  </video><%}%>

</div>
